  "dependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.19.1",
    "jest-html-reporter": "^3.3.0"
  },
  "devDependencies": {
    "jest": "^23.6.0"
  }
